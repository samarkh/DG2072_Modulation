                                                    <!-- Carrier waveform selector -->
                                                    <ComboBox x:Name="CarrierWaveformComboBox"
                                                                  Grid.Row="0" Grid.Column="1"
                                                                  Margin="0,5,0,5"
                                                                  ToolTip="Select the waveform type used as the carrier signal. Recommended: Sine for standard modulation."
                                                                  SelectionChanged="CarrierWaveformComboBox_SelectionChanged">
                                                        <ComboBoxItem Content="Sine" IsSelected="True"/>
                                                        <ComboBoxItem Content="Square"/>
                                                        <ComboBoxItem Content="Ramp"/>
                                                        <ComboBoxItem Content="Pulse"/>
                                                        <ComboBoxItem Content="Arbitrary"/>
                                                    </ComboBox>

                                                    <!-- Carrier Frequency -->
                                                    <TextBlock Text="Carrier Frequency:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                                                    <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" Margin="0,5"
                                                                ToolTip="Enter the carrier frequency. Typical range: 100 kHz to“ 10 MHz. Default: 1 MHz.">
                                                        <TextBox Width="100"
                                                              Text="100"  x:Name="CarrierFrequencyTextBox" TextAlignment="Right"/>

                                                        <ComboBox x:Name="CarrierFrequencyUnitComboBox" Width="70" 
                                                     Margin="5,0,0,0" 
                                                     SelectionChanged="CarrierFrequencyUnitComboBox_SelectionChanged" 
                                                     HorizontalAlignment="Left">
                                                            <ComboBoxItem Content="µHz"/>
                                                            <ComboBoxItem Content="mHz"/>
                                                            <ComboBoxItem Content="Hz" />
                                                            <ComboBoxItem Content="kHz" IsSelected="True"/>
                                                            <ComboBoxItem Content="MHz"/>
                                                        </ComboBox>
                                                    </StackPanel>
                                                </Grid>
                                            </GroupBox>

                                            <!-- Modulating Section -->
                                            <GroupBox Header="Modulation Settings" Margin="0,5">
                                                <Grid Margin="5">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="150"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <!-- Modulation Type -->
                                                    <TextBlock Text="Modulation Type:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                                                    <ComboBox x:Name="ModulationTypeComboBox" Grid.Row="0" Grid.Column="1" Margin="0,5"
																  ToolTip="Choose the modulation method to apply to the carrier signal. Recommended: AM or FM for basic applications."
																  SelectionChanged="ComboBox_SelectionChanged">
                                                    </ComboBox>

                                                    <!-- Modulating Waveform -->
                                                    <TextBlock Text="Modulating Waveform:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                                                    <ComboBox x:Name="ModulatingWaveformComboBox" Grid.Row="1" Grid.Column="1" Margin="0,5"
																  ToolTip="Select the waveform shape for the modulating signal"
																  Loaded="ModulatingWaveformComboBox_Loaded"
																  SelectionChanged="ModulatingWaveformComboBox_SelectionChanged">
                                                    </ComboBox>

                                                    <!-- Modulation Frequency -->
                                                    <TextBlock Text="Frequency:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                                                    <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1" Margin="0,5">
                                                        <TextBox x:Name="ModulationFrequencyTextBox" Width="100" Text="0.0" HorizontalContentAlignment="Right"
																	VerticalContentAlignment="Center"/>
                                                        <ComboBox x:Name="ModulationFrequencyUnitComboBox"
																	 Width="70"
																	 Margin="5,0,0,0"
																	 Loaded="ModulationFrequencyUnitComboBox_Loaded"
																	 SelectionChanged="ModulationFrequencyUnitComboBox_SelectionChanged">
                                                        </ComboBox>
                                                    </StackPanel>

                                                    <!-- Modulation Depth -->
                                                    <TextBlock Text="Modulation Depth (%):" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                                                    <TextBox x:Name="ModulationDepthTextBox" Grid.Row="3" Grid.Column="1" Margin="0,5,245,5" Text="25.0"
																HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
                                                </Grid>
                                            </GroupBox>



                                        </StackPanel>
                                    </GroupBox>

                                    <!-- Modulation Buttons -->
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,331,0,17" Width="260">
                                        <Button x:Name="ApplyModulationButton" 
											Content="Apply Modulation" 
											Width="120" 
											Height="30" 
											Margin="5"
											Click="ApplyModulationButton_Click"
											Background="#FF4CAF50"
											Foreground="White"/>

                                        <Button x:Name="DisableModulationButton" 
											Content="Disable Modulation" 
											Width="120" 
											Height="30" 
											Margin="5"
											Click="DisableModulationButton_Click"
											Background="#FFF44336"
											Foreground="White"/>
                                    </StackPanel>


                                </Grid>
                            </TabItem>
                        </TabControl>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Command Log -->
        <GroupBox Header="Command Log" Grid.Row="2" Margin="10,0,10,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="CommandLogTextBox" Grid.Column="0" Height="100" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
                <Button x:Name="ClearLogButton" Content="Clear Log" Grid.Column="1" Margin="5,0,0,0" VerticalAlignment="Bottom" Click="ClearLogButton_Click"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>